def is_armstrong_number(number):
    numbers = []
    for i in str(number):
        numbers.append(i)
   
    numbers_amount = 0
    for amount in numbers:
        numbers_amount += 1
    
    total = 0
    for numbr in range(len(numbers)):
        total += int(numbers[numbr])**numbers_amount
    
    if number == total:
        return True
    else:
        return False

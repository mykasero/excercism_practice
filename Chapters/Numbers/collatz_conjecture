"""
if number is even - divide by 2
if number is odd - multiply by 3 and add 1
"""

def steps(number):
    steps = 0

    if number <= 0:
        raise ValueError("Only positive integers are allowed")
    while number != 1:
        if number % 2 == 0:
            number = int(number / 2)
        else:
            number = (number * 3) + 1
        steps += 1
    return steps

print("the amount of steps: ",steps(16))
